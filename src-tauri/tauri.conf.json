{
  "$schema": "https://schema.tauri.app/config/2.0.0-rc",
  "productName": "YakClient",
  "version": "1.0.32",
  "identifier": "net.yakclient",
  "build": {
    "frontendDist": "../out",
    "devUrl": "http://localhost:3000",
    "beforeDevCommand": "npm run dev",
    "beforeBuildCommand": "npm run build"
  },
  "app": {
    "windows": [
      {
        "label": "main",
        "title": "YakClient",
        "width": 500,
        "height": 800,
        "resizable": false,
        "fullscreen": false,
        "visible": false,
        "url": "/login",
        "maximizable": false,
        "transparent": true
      },
      {
        "width": 300,
        "height": 300,
        "label": "splashscreen",
        "url": "/splashscreen",
        "decorations": false,
        "center": true,
        "resizable": false,
        "maximizable": false
      }
    ],
    "macOSPrivateApi": true,
    "security": {
      "csp": null,
      "capabilities": ["splash"]
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/icon.png",
      "icons/icon.ico"
    ],
    "createUpdaterArtifacts": true
  },
  "plugins": {
    "updater": {
      "pubkey": "dW50cnVzdGVkIGNvbW1lbnQ6IG1pbmlzaWduIHB1YmxpYyBrZXk6IDdBQkVBNDlDQ0NCODZBREEKUldUYWFyak1uS1MrZWppaHRseGIrNVBVMUQzeU5Ed3c5MDZBOUdEYmtRc1Y5ZFZCcmRCeDd6dDIK",
      "endpoints": [
        "https://github.com/yakclient/launcher/releases/latest/download/latest.json"
      ]
    }
  }
}